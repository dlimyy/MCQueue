<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Language"
        android:textSize="22sp"
        android:textColor="@color/black"
        android:padding="16dp" />

    <LinearLayout
        android:gravity="right"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/languageCancelButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cancel"
            android:textSize="18sp"
            android:textColor="#5BA1F6"/>

        <TextView
            android:id="@+id/languageDoneButton"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="16dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Done"
            android:textSize="18sp"
            android:textColor="#5BA1F6"/>

    </LinearLayout>

    <com.google.android.material.chip.ChipGroup
        android:layout_marginVertical="20dp"
        android:id="@+id/languageChipGroup"
        android:layout_width="match_parent"
        android:paddingLeft="10dp"
        android:layout_height="wrap_content"
        app:singleSelection="true">

        <com.google.android.material.chip.Chip
            android:id="@+id/englishChip"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            app:chipBackgroundColor="@color/white"
            app:chipStrokeColor="#979797"
            app:chipStrokeWidth="1dp"
            android:text="English"
            android:checkable="true"
            app:checkedIconTint="@color/black"
            app:checkedIcon="@drawable/ic_baseline_check_24"
            app:checkedIconVisible="true"/>

        <com.google.android.material.chip.Chip
            android:id="@+id/chineseChip"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            app:chipBackgroundColor="@color/white"
            app:chipStrokeColor="#979797"
            app:chipStrokeWidth="1dp"
            android:text="Chinese"
            android:checkable="true"
            app:checkedIconTint="@color/black"
            app:checkedIcon="@drawable/ic_baseline_check_24"
            app:checkedIconVisible="true"/>
        <com.google.android.material.chip.Chip
            android:id="@+id/malayChip"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            app:chipBackgroundColor="@color/white"
            app:chipStrokeColor="#979797"
            app:chipStrokeWidth="1dp"
            android:text="Malay"
            android:checkable="true"
            app:checkedIconTint="@color/black"
            app:checkedIcon="@drawable/ic_baseline_check_24"
            app:checkedIconVisible="true"/>

        <com.google.android.material.chip.Chip
            android:id="@+id/tamilChip"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            app:chipBackgroundColor="@color/white"
            app:chipStrokeColor="#979797"
            app:chipStrokeWidth="1dp"
            android:text="Tamil"
            android:checkable="true"
            app:checkedIconTint="@color/black"
            app:checkedIcon="@drawable/ic_baseline_check_24"
            app:checkedIconVisible="true"/>
        <com.google.android.material.chip.Chip
            android:id="@+id/hokkienChip"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            app:chipBackgroundColor="@color/white"
            app:chipStrokeColor="#979797"
            app:chipStrokeWidth="1dp"
            android:text="Hokkien"
            android:checkable="true"
            app:checkedIconTint="@color/black"
            app:checkedIcon="@drawable/ic_baseline_check_24"
            app:checkedIconVisible="true"/>

        <com.google.android.material.chip.Chip
            android:id="@+id/teochewChip"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            app:chipBackgroundColor="@color/white"
            app:chipStrokeColor="#979797"
            app:chipStrokeWidth="1dp"
            android:text="Teochew"
            android:checkable="true"
            app:checkedIconTint="@color/black"
            app:checkedIcon="@drawable/ic_baseline_check_24"
            app:checkedIconVisible="true"/>

        <com.google.android.material.chip.Chip
            android:id="@+id/cantoneseChip"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            app:chipBackgroundColor="@color/white"
            app:chipStrokeColor="#979797"
            app:chipStrokeWidth="1dp"
            android:text="Cantonese"
            android:checkable="true"
            app:checkedIconTint="@color/black"
            app:checkedIcon="@drawable/ic_baseline_check_24"
            app:checkedIconVisible="true"/>

        <com.google.android.material.chip.Chip
            android:id="@+id/hakkaChip"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            app:chipBackgroundColor="@color/white"
            app:chipStrokeColor="#979797"
            app:chipStrokeWidth="1dp"
            android:text="Hakka"
            android:checkable="true"
            app:checkedIconTint="@color/black"
            app:checkedIcon="@drawable/ic_baseline_check_24"
            app:checkedIconVisible="true"/>

        <com.google.android.material.chip.Chip
            android:id="@+id/allLanguageChip"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            app:chipBackgroundColor="@color/white"
            app:chipStrokeColor="#979797"
            app:chipStrokeWidth="1dp"
            android:text="All"
            android:checkable="true"
            app:checkedIconTint="@color/black"
            app:checkedIcon="@drawable/ic_baseline_check_24"
            app:checkedIconVisible="true"/>

    </com.google.android.material.chip.ChipGroup>


</LinearLayout>