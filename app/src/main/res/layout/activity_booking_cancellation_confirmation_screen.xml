<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".BookingCancellationConfirmationScreen"
    android:background="@drawable/background_colour">

    <ImageView
        android:id="@+id/navigatebacktoCancellation"
        android:layout_width="@dimen/_28sdp"
        android:layout_height="@dimen/_28sdp"
        android:layout_marginStart="@dimen/_4sdp"
        android:layout_marginTop="@dimen/_12sdp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:src="@drawable/backarrow" />

    <TextView
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_25sdp"
        android:fontFamily="@font/sora"
        android:gravity="center"
        android:textColor="@color/black"
        android:textSize="@dimen/_28ssp"
        android:textStyle="bold"
        android:layout_marginStart="@dimen/_10sdp"
        android:text="Cancel Booking" />

    <androidx.cardview.widget.CardView
        android:id="@+id/appointmentTimingCardView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:cardCornerRadius="@dimen/_20sdp"
        app:cardBackgroundColor="#00BCD4"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHeight_percent="0.85"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/navigatebacktoCancellation"
        app:layout_constraintVertical_bias="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_marginTop="@dimen/_30sdp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Date"
                android:textSize="@dimen/_22ssp"
                android:textStyle="bold"
                android:fontFamily="@font/work_sans"
                android:textColor="@color/black"
                android:paddingHorizontal="@dimen/_20sdp" />

            <com.google.android.material.textfield.TextInputLayout
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:boxBackgroundColor="#90E4EF"
                app:boxCornerRadiusTopStart="@dimen/_8sdp"
                app:boxCornerRadiusTopEnd="@dimen/_8sdp"
                app:boxCornerRadiusBottomStart="@dimen/_8sdp"
                app:boxCornerRadiusBottomEnd="@dimen/_8sdp"
                app:boxStrokeWidth="@dimen/_2sdp"
                app:boxStrokeColor="@color/purple_200"
                app:hintEnabled="false"
                android:paddingHorizontal="@dimen/_18sdp">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/cancellationDate"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:cursorVisible="false"
                    android:longClickable="false"
                    android:focusable="false"
                    android:focusableInTouchMode="false" />

            </com.google.android.material.textfield.TextInputLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Clinic"
                android:textSize="@dimen/_22ssp"
                android:textStyle="bold"
                android:fontFamily="@font/work_sans"
                android:textColor="@color/black"
                android:paddingHorizontal="@dimen/_20sdp" />

            <com.google.android.material.textfield.TextInputLayout
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:boxBackgroundColor="#90E4EF"
                app:boxStrokeWidth="@dimen/_2sdp"
                app:boxStrokeColor="@color/purple_200"
                app:boxCornerRadiusTopStart="@dimen/_8sdp"
                app:boxCornerRadiusTopEnd="@dimen/_8sdp"
                app:boxCornerRadiusBottomStart="@dimen/_8sdp"
                app:boxCornerRadiusBottomEnd="@dimen/_8sdp"
                app:hintEnabled="false"
                android:paddingHorizontal="@dimen/_18sdp">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/cancellationClinic"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:cursorVisible="false"
                    android:longClickable="false"
                    android:focusable="false"
                    android:focusableInTouchMode="false" />

            </com.google.android.material.textfield.TextInputLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Doctor"
                android:textSize="@dimen/_22ssp"
                android:textStyle="bold"
                android:fontFamily="@font/work_sans"
                android:textColor="@color/black"
                android:paddingHorizontal="@dimen/_20sdp" />

            <com.google.android.material.textfield.TextInputLayout
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:boxBackgroundColor="#90E4EF"
                app:boxStrokeWidth="@dimen/_2sdp"
                app:boxStrokeColor="@color/purple_200"
                app:boxCornerRadiusTopStart="@dimen/_8sdp"
                app:boxCornerRadiusTopEnd="@dimen/_8sdp"
                app:boxCornerRadiusBottomStart="@dimen/_8sdp"
                app:boxCornerRadiusBottomEnd="@dimen/_8sdp"
                app:hintEnabled="false"
                android:paddingHorizontal="@dimen/_18sdp">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/cancellationDoctor"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:cursorVisible="false"
                    android:longClickable="false"
                    android:focusable="false"
                    android:focusableInTouchMode="false" />

            </com.google.android.material.textfield.TextInputLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Timing"
                android:textSize="@dimen/_22ssp"
                android:textStyle="bold"
                android:fontFamily="@font/work_sans"
                android:textColor="@color/black"
                android:paddingHorizontal="@dimen/_20sdp" />

            <com.google.android.material.textfield.TextInputLayout
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:boxBackgroundColor="#90E4EF"
                app:boxStrokeWidth="@dimen/_2sdp"
                app:boxStrokeColor="@color/purple_200"
                app:boxCornerRadiusTopStart="@dimen/_8sdp"
                app:boxCornerRadiusTopEnd="@dimen/_8sdp"
                app:boxCornerRadiusBottomStart="@dimen/_8sdp"
                app:boxCornerRadiusBottomEnd="@dimen/_8sdp"
                app:hintEnabled="false"
                android:paddingHorizontal="@dimen/_18sdp">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/cancellationTiming"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:cursorVisible="false"
                    android:longClickable="false"
                    android:focusable="false"
                    android:focusableInTouchMode="false" />

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/cancellationButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/_30sdp"
                android:paddingHorizontal="@dimen/_40sdp"
                android:paddingVertical="@dimen/_10sdp"
                app:cornerRadius="@dimen/_5sdp"
                android:text="Cancel Appointment" />

        </LinearLayout>

    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>