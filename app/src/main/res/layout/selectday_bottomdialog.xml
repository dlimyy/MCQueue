<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Day"
        android:textSize="22sp"
        android:textColor="@color/black"
        android:padding="16dp" />

    <LinearLayout
        android:gravity="right"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/dayCancelButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cancel"
            android:textSize="18sp"
            android:textColor="#5BA1F6"/>

        <TextView
            android:id="@+id/dayDoneButton"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="16dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Done"
            android:textSize="18sp"
            android:textColor="#5BA1F6"/>

    </LinearLayout>

    <com.google.android.material.chip.ChipGroup
        android:layout_marginVertical="20dp"
        android:id="@+id/dayChipGroup"
        android:layout_width="match_parent"
        android:paddingLeft="10dp"
        android:layout_height="wrap_content"
        app:singleSelection="true">

        <com.google.android.material.chip.Chip
            android:id="@+id/MondayChip"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            app:chipBackgroundColor="@color/white"
            app:chipStrokeColor="#979797"
            app:chipStrokeWidth="1dp"
            android:text="Monday"
            android:checkable="true"
            app:checkedIconTint="@color/black"
            app:checkedIcon="@drawable/ic_baseline_check_24"
            app:checkedIconVisible="true"/>

        <com.google.android.material.chip.Chip
            android:id="@+id/TuesdayChip"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            app:chipBackgroundColor="@color/white"
            app:chipStrokeColor="#979797"
            app:chipStrokeWidth="1dp"
            android:text="Tuesday"
            android:checkable="true"
            app:checkedIconTint="@color/black"
            app:checkedIcon="@drawable/ic_baseline_check_24"
            app:checkedIconVisible="true"/>
        <com.google.android.material.chip.Chip
            android:id="@+id/wednesdayChip"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            app:chipBackgroundColor="@color/white"
            app:chipStrokeColor="#979797"
            app:chipStrokeWidth="1dp"
            android:text="Wednesday"
            android:checkable="true"
            app:checkedIconTint="@color/black"
            app:checkedIcon="@drawable/ic_baseline_check_24"
            app:checkedIconVisible="true"/>

        <com.google.android.material.chip.Chip
            android:id="@+id/thursdayChip"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            app:chipBackgroundColor="@color/white"
            app:chipStrokeColor="#979797"
            app:chipStrokeWidth="1dp"
            android:text="Thursday"
            android:checkable="true"
            app:checkedIconTint="@color/black"
            app:checkedIcon="@drawable/ic_baseline_check_24"
            app:checkedIconVisible="true"/>
        <com.google.android.material.chip.Chip
            android:id="@+id/fridayChip"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            app:chipBackgroundColor="@color/white"
            app:chipStrokeColor="#979797"
            app:chipStrokeWidth="1dp"
            android:text="Friday"
            android:checkable="true"
            app:checkedIconTint="@color/black"
            app:checkedIcon="@drawable/ic_baseline_check_24"
            app:checkedIconVisible="true"/>

        <com.google.android.material.chip.Chip
            android:id="@+id/saturdayChip"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            app:chipBackgroundColor="@color/white"
            app:chipStrokeColor="#979797"
            app:chipStrokeWidth="1dp"
            android:text="Saturday"
            android:checkable="true"
            app:checkedIconTint="@color/black"
            app:checkedIcon="@drawable/ic_baseline_check_24"
            app:checkedIconVisible="true"/>

        <com.google.android.material.chip.Chip
            android:id="@+id/sundayChip"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            app:chipBackgroundColor="@color/white"
            app:chipStrokeColor="#979797"
            app:chipStrokeWidth="1dp"
            android:text="Sunday"
            android:checkable="true"
            app:checkedIconTint="@color/black"
            app:checkedIcon="@drawable/ic_baseline_check_24"
            app:checkedIconVisible="true"/>

        <com.google.android.material.chip.Chip
            android:id="@+id/allDayChip"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            app:chipBackgroundColor="@color/white"
            app:chipStrokeColor="#979797"
            app:chipStrokeWidth="1dp"
            android:text="All"
            android:checkable="true"
            app:checkedIconTint="@color/black"
            app:checkedIcon="@drawable/ic_baseline_check_24"
            app:checkedIconVisible="true"/>

    </com.google.android.material.chip.ChipGroup>

</LinearLayout>